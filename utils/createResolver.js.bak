// @flow

import type { GraphQLResolveInfo } from 'graphql'
import { Prisma } from 'app/graphql/generated/prisma.js.flow'

export type ResolverArg<TArgs, TContext> = {
  parent: any,
  args: TArgs,
  context: TContext,
  info: GraphQLResolveInfo,
  prisma: Prisma,
}

export type Resolver<TArgs, TContext = any> = (
  args: TArgs,
  prisma: Prisma,
  info: GraphQLResolveInfo,
  context: TContext,
  parent: any
) => any

const createResolver = (
  resolver: Resolver<any, any>
) => (parent, args, context, info) =>
  resolver({ parent, args, context, info, prisma: context.prisma })

export default createResolver
